---
import { Icon } from "astro-icon/components";
import Pill from "./Pill.astro";
import Button from "./Button.astro";

const { tagline, title } = Astro.props;
---

<section
  class="flex flex-col-reverse justify-center md:grid md:grid-cols-[6fr_4fr] gap-6 max-w-screen-lg min-h-screen md:max-h-screen h-fit pt-20 mx-auto"
>
  <div class="flex flex-col justify-center items-start">
    <p class="font-mono mb-6 ml-1 text-nord-8">Hi, my name is</p>
    <h1 class="m-0 leading-[1.1] font-semibold text-clamp">{title}</h1>
    <h2 class="mt-2 leading-[0.9] font-semibold text-clamp text-nord-4">
      I build things for the web.
    </h2>
    {tagline && <p class="mt-7 max-w-xl text-base text-nord-4">{tagline}</p>}
    <div class="flex flex-wrap gap-4 mt-7">
      <Pill icon="mdi:cogs">Engineer</Pill>
      <Pill icon="mdi:code-tags">Developer</Pill>
      <Pill icon="mdi:laptop">Freelancer</Pill>
    </div>
  </div>
  <div class="flex md:flex-col justify-center gap-6 md:my-auto min-w-min">
    <div
      class="relative rounded-lg transition-all shadow-md hover:shadow-nord-8 hover:shadow-lg hover:-translate-y-2"
    >
      <img
        src="/assets/profilePicture.jpeg"
        alt="Profile Picture"
        class="h-full max-w-xs md:max-w-md max-h-[480px] object-cover object-top w-full rounded-lg aspect-[3/4]"
      />
      <div
        class="absolute left-0 right-0 top-0 z-10 h-full w-full bg-nord-0 opacity-40 rounded-lg max-w-xs md:max-w-md max-h-[480px]"
      >
      </div>
    </div>
    <div
      class="flex flex-wrap gap-4 justify-center content-center md:w-full w-min"
    >
      <Button href="/resume.pdf" extraClass="w-full justify-center">
        <Icon name="mdi:file-document-outline" class="h-6 w-6" />Resume
      </Button>
      <div class="flex flex-wrap w-full gap-4 justify-center">
        <Button
          href="https://github.com/DavidEGiraldo"
          extraClass="grow justify-center"
        >
          <Icon name="mdi:github" class="h-6 w-6" />GitHub
        </Button>
        <Button
          href="https://www.linkedin.com/in/degiraldod/"
          extraClass="grow justify-center"
        >
          <Icon name="mdi:linkedin" class="h-6 w-6" />LinkedIn
        </Button>
      </div>
    </div>
  </div>
</section>
